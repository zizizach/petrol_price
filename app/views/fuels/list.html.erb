<%= link_to "All" %>
<% Malaysia.states.each do |state| %>
   | <%= link_to state, list_fuels_path(state: state)  %>
<% end %>
<br/><br/>

<table class="table">
  <tr>
    <th>State</th>
    <th>City</th>
    <th>Brand</th>
    <th>Ron 95</th>
    <th>Ron 97</th>
    <th>Diesel</th>
    <th></th>
  </tr>
  
  <% for fuel in @fuels %>
      <tr>
        <td><%= fuel.state %></td>
        <td><%= fuel.area %></td>
        <td><%= fuel.brand %></td>
        <td><%= fuel.ron_95_price %></td>
        <td><%= fuel.ron_97_price %></td>
        <td><%= fuel.diesel_price %></td>
        <td><%= link_to "👍", upvote_fuel_path(fuel), method: :post %> / 
        <%= link_to '👎', devote_fuel_path(fuel), method: :post %>
        (<%= pluralize(fuel.votes.count, "vote") %>)</td>
      </tr>
  <% end %>
  
</table>